  <%= link_to "記録を登録する", "/tasks/#{@task.id}/records/new", method: :get %>
</p>
<%= month_calendar events: @records do |date, records| %>
  <%= link_to date.day, "/tasks/#{@task.id}/records/new", method: :get %>
  <%# <% link_to date.all, new_record_path, method: :get%> 

  <% @task.records.each do |record|%>
    <div>
