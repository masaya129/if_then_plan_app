<div class="contents row">
  <div class="container">
    <h3>習慣化タスク作成</h3>
      <%= form_with(model: @task, local: true) do |form| %>
      <%= render 'shared/error_messages', model: form.object %>
      <div class='field-label'>
         <%= form.label :if_task%>
      </div>
      <%= form.text_field :if_task, placeholder: "IF(習慣化したい行動に紐付ける行動・場所・時間..etc)", autocomplete: "off" %>
      <div class='field-label'>
          <%= form.label :then_task%>
      </div>
      <%= form.text_field :then_task, placeholder: "THEN(習慣化したい行動)", autocomplete: "off" %>
      <div class='field-label'>
          <%= form.label :title%>
      </div>
      <%= form.text_field :title, placeholder: "習慣化したい行動の総称", autocomplete: "off"%>
      <div class='field-label'>
          <%= form.label :unit%>
      </div>
      <%= form.text_field :unit, placeholder: "習慣化したい行動の単位(例: 分、時間、回、ページ..etc)", autocomplete: "off"%>
      <div class='field-label'>
          <%= form.label :month_goal%><%= "※半角数字のみ"%>
      </div>
      <%= form.text_field :month_goal, placeholder: "習慣化したい行動の月間目標(例：月30時間勉強する→30)※半角数字のみ", autocomplete: "off"%>
      <%= form.submit "習慣化スタート！" %>
    <% end %>
  </div>
</div>
